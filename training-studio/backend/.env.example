# Training Studio Backend Configuration

# API Keys (required)
ANTHROPIC_API_KEY=sk-ant-xxx

# HuggingFace token for pyannote speaker diarization (optional, but recommended)
HUGGINGFACE_TOKEN=hf_xxx

# OpenAI API key for Whisper API fallback (optional)
OPENAI_API_KEY=sk-xxx

# Database (default: SQLite)
DATABASE_URL=sqlite+aiosqlite:///./training_studio.db

# File Storage Paths
STORAGE_PATH=./storage
TEMP_PATH=./temp

# Whisper Model (tiny, base, small, medium, large, large-v3)
WHISPER_MODEL=large-v3

# Processing Settings
MAX_VIDEO_DURATION_MINUTES=120
DEFAULT_SAMPLE_RATE=16000

# Quality Thresholds
MIN_QUALITY_SCORE=60.0
MIN_SPECIFICITY_SCORE=50.0
MIN_SAFETY_SCORE=80.0
HUMAN_REVIEW_THRESHOLD=75.0

# Server
HOST=0.0.0.0
PORT=8000
